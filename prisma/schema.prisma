generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum UserRole {
  CUSTOMER
  RESTAURANT_ADMIN
}

enum DiningType {
  DINE_IN
  PICKUP
}

enum OrderStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

// Models

model User {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  full_name     String   @db.VarChar(100)
  email         String   @unique @db.VarChar(150)
  phone         String   @unique @db.VarChar(15)
  password_hash String
  role          UserRole @default(CUSTOMER)
  created_at    DateTime @default(now())
  updated_at    DateTime @default(now()) @updatedAt

  preferences UserFoodPreference[]
  orders      Order[]
  reviews     Review[]

  @@map("users")
  @@index([email])
}

model UserFoodPreference {
  id              String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id         String  @db.Uuid
  ingredient_name String? @db.VarChar(100)
  is_allergy      Boolean @default(false)
  is_dislike      Boolean @default(false)

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("user_food_preferences")
}

model Restaurant {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String   @db.VarChar(150)
  description String?
  address     String
  city        String?  @db.VarChar(100)
  latitude    Decimal? @db.Decimal(9, 6)
  longitude   Decimal? @db.Decimal(9, 6)
  phone       String?  @db.VarChar(15)
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now())

  qr_code RestaurantQRCode?
  dishes  Dish[]
  offers  Offer[]
  orders  Order[]

  @@map("restaurants")
  @@index([latitude, longitude], name: "idx_restaurant_location")
}

model RestaurantQRCode {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  restaurant_id String   @unique @db.Uuid
  qr_code_url   String
  created_at    DateTime @default(now())

  restaurant Restaurant @relation(fields: [restaurant_id], references: [id], onDelete: Cascade)

  @@map("restaurant_qr_codes")
}

model Dish {
  id              String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  restaurant_id   String   @db.Uuid
  name            String   @db.VarChar(150)
  description     String?
  cooking_method  String?
  calories        Int?
  price           Decimal? @db.Decimal(10, 2)
  recommended_for String?
  image_url       String?
  is_available    Boolean  @default(true)

  restaurant  Restaurant        @relation(fields: [restaurant_id], references: [id], onDelete: Cascade)
  ingredients DishIngredient[]
  order_items OrderItem[]
  reviews     Review[]

  @@map("dishes")
  @@index([restaurant_id], name: "idx_dishes_restaurant")
}

model Ingredient {
  id   String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name String @unique @db.VarChar(100)

  dishes DishIngredient[]

  @@map("ingredients")
}

model DishIngredient {
  dish_id       String @db.Uuid
  ingredient_id String @db.Uuid

  dish       Dish       @relation(fields: [dish_id], references: [id], onDelete: Cascade)
  ingredient Ingredient @relation(fields: [ingredient_id], references: [id], onDelete: Cascade)

  @@id([dish_id, ingredient_id])
  @@map("dish_ingredients")
}

model Offer {
  id               String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  restaurant_id    String    @db.Uuid
  title            String?   @db.VarChar(150)
  discount_percent Int?
  valid_from       DateTime? @db.Date
  valid_to         DateTime? @db.Date
  is_active        Boolean   @default(true)

  restaurant Restaurant @relation(fields: [restaurant_id], references: [id], onDelete: Cascade)

  @@map("offers")
}

model Order {
  id             String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id        String?      @db.Uuid
  restaurant_id  String?      @db.Uuid
  dining_option  DiningType?
  scheduled_time DateTime?
  status         OrderStatus? @default(PENDING)
  created_at     DateTime     @default(now())

  user        User?        @relation(fields: [user_id], references: [id])
  restaurant  Restaurant?  @relation(fields: [restaurant_id], references: [id])
  order_items OrderItem[]

  @@map("orders")
}

model OrderItem {
  order_id String @db.Uuid
  dish_id  String @db.Uuid
  quantity Int?   @default(1)

  order Order @relation(fields: [order_id], references: [id], onDelete: Cascade)
  dish  Dish  @relation(fields: [dish_id], references: [id])

  @@id([order_id, dish_id])
  @@map("order_items")
}

model Review {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  user_id    String?  @db.Uuid
  dish_id    String?  @db.Uuid
  rating     Int?
  comment    String?
  created_at DateTime @default(now())

  user User? @relation(fields: [user_id], references: [id])
  dish Dish? @relation(fields: [dish_id], references: [id])

  @@map("reviews")
}
